{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["next/core-web-vitals"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [],
  "rules": {
      "react/no-unescaped-entities": [
          "error",
          {
              "forbid": ["'", "\"", ">", "}"],
              "allow": ["'", "\"", ">", "}", "`"]
          }
      ]
  }
}
